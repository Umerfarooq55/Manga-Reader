<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/manga_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleAlpha="0.7"
            app:mrl_rippleBackground="@color/transparent"
            app:mrl_rippleColor="#ffe0e0e0"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleDimension="45dp"
            app:mrl_rippleDuration="200"
            app:mrl_rippleFadeDuration="50"
            app:mrl_rippleHover="true"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleOverlay="true"
            app:mrl_ripplePersistent="false">

            <ImageView
                android:id="@+id/mana_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:id="@+id/layout_top_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/manga_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:text="Death Note"
                android:textColor="#ffffff"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/fav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/ic_nofav" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

