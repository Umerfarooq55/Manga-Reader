<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="65dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bookicon"

            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/image"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#212121"
            android:layout_gravity="center"
           android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"

            android:text="Chapter Number"
            android:id="@+id/chapter_number"/>

        <Button
            android:id="@+id/chache"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/chapter_number"
            android:layout_gravity="center"
           android:layout_marginTop="20dp"
           android:textSize="12dp"
            android:layout_marginLeft="50dp"
            android:visibility="visible"
            android:background="@color/snackBarjson"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Cache"
            android:textStyle="bold"
            android:textColor="#ffffff"
             />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="visible"
            android:layout_toRightOf="@+id/chapter_number"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/del"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/chapter_number"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="12dp"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:background="@color/snackBarInternet"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Delete"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

</LinearLayout>